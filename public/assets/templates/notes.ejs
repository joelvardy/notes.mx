<%
	template.addEvent('div.notes > div', 'click', actions.clickNote);
%>

<div id="notes-list">
	<header>
		<a class="button new" href="#!/note/new"><span class="icon"></span>New Note</a>
		<a class="logout" href="#!/user/logout">Logout</a>
	</header>
	<div class="notes">
		<% if (notes_list) { %>
			<% for (var i=0; i<notes_list.length; i++) { %>
				<div data-noteId="<%= notes_list[i].note_id %>">
					<h5><%= notes.utility.cutString(notes_list[i].text, 40) %></h5>
					<time><%= notes.utility.relativeDate(notes_list[i].created_at) %></time>
				</div>
			<% } %>
		<% } else { %>
			<h3 class="no-notes">No notes were found :(</h3>
		<% } %>
	</div>
</div>